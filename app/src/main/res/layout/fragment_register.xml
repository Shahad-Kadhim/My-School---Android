<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.shahad.app.my_school.ui.register.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/monda_bold"
            android:text="@string/sign_up"
            android:textColor="@color/brand_color"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            style="@style/EditTextField"
            android:hint="@string/name"
            android:background="@drawable/reg_rounded"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            style="@style/EditTextField"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:background="@drawable/reg_rounded"
            app:layout_constraintTop_toBottomOf="@id/edit_name"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            style="@style/EditTextField"
            android:hint="@string/phone"
            android:background="@drawable/reg_rounded"
            app:layout_constraintTop_toBottomOf="@id/edit_password"/>

        <EditText
            android:id="@+id/edit_teaching_specialization"
            android:layout_width="match_parent"
            style="@style/EditTextField"
            android:hint="@string/teaching_specialization"
            android:background="@drawable/reg_rounded"
            app:layout_constraintTop_toBottomOf="@id/edit_phone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/reg_rounded"
            android:backgroundTint="@color/brand_color"
            android:text="@string/sign_up_button"
            android:textColor="@color/shade_primary_color"
            app:layout_constraintTop_toBottomOf="@+id/edit_teaching_specialization"
            tools:layout_editor_absoluteX="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_login"
            android:layout_marginTop="24dp"
            android:textColor="@color/shade_secondary_color"
            app:layout_constraintEnd_toEndOf="@+id/appCompatButton"
            app:layout_constraintStart_toStartOf="@+id/appCompatButton"
            app:layout_constraintTop_toBottomOf="@+id/appCompatButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>